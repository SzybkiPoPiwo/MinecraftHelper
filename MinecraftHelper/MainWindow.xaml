<Window x:Class="MinecraftHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinecraftHelper"
        mc:Ignorable="d"
        Title="Minecraft Helper" Height="900" Width="1400"
        Background="#1E1E1E" Foreground="#E0E0E0">

    <Window.Resources>
        <!-- ========================================== -->
        <!-- KLUCZOWE ZASOBY DLA KODU C# (NIE USUWAĆ) -->
        <!-- ========================================== -->
        <SolidColorBrush x:Key="TileBg" Color="#2D2D30"/>
        <SolidColorBrush x:Key="TileBgActive" Color="#152C3D"/>
        <SolidColorBrush x:Key="TileBorder" Color="#454545"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>

        <!-- ===== DARK COMBOBOX (działa + ciemny hover/selected) ===== -->
        <SolidColorBrush x:Key="ComboBg" Color="#252526"/>
        <SolidColorBrush x:Key="ComboBorder" Color="#555555"/>
        <SolidColorBrush x:Key="ComboDropBg" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="ComboHoverBg" Color="#2D2D30"/>
        <SolidColorBrush x:Key="ComboSelectedBg" Color="#3A3A3A"/>
        <SolidColorBrush x:Key="ComboText" Color="#FFFFFF"/>

        <Style x:Key="DarkComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="{StaticResource ComboText}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource ComboHoverBg}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource ComboSelectedBg}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#777777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource ComboText}"/>
            <Setter Property="Background" Value="{StaticResource ComboBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ComboBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource DarkComboBoxItem}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- KLIKALNY toggle (żeby dropdown się otwierał) -->
                            <ToggleButton x:Name="ToggleButton"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          Foreground="{StaticResource ComboText}"
                                          TextElement.Foreground="{StaticResource ComboText}">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="22"/>
                                    </Grid.ColumnDefinitions>

                                    <ContentPresenter Grid.Column="0"
                                                      Margin="8,0,6,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>

                                    <Path Grid.Column="1"
                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                          Fill="#CCCCCC"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Grid>
                            </ToggleButton>

                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Fade">
                                <Border Background="{StaticResource ComboDropBg}"
                                        BorderBrush="{StaticResource ComboBorder}"
                                        BorderThickness="1"
                                        CornerRadius="3"
                                        SnapsToDevicePixels="True">
                                    <ScrollViewer SnapsToDevicePixels="True"
                                                  VerticalScrollBarVisibility="Auto">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>

                        <!-- POPRAWIONE: ciemny hover/pressed/open -->
                        <ControlTemplate.Triggers>

                            <!-- Hover na polu: CIEMNO -->
                            <Trigger SourceName="ToggleButton" Property="IsMouseOver" Value="True">
                                <Setter TargetName="ToggleButton" Property="Background" Value="#2D2D30"/>
                                <Setter TargetName="ToggleButton" Property="BorderBrush" Value="#777777"/>
                            </Trigger>

                            <!-- Kliknięcie: jeszcze ciemniej -->
                            <Trigger SourceName="ToggleButton" Property="IsPressed" Value="True">
                                <Setter TargetName="ToggleButton" Property="Background" Value="#3A3A3A"/>
                                <Setter TargetName="ToggleButton" Property="BorderBrush" Value="#888888"/>
                            </Trigger>

                            <!-- Gdy lista otwarta: też ciemno -->
                            <Trigger SourceName="ToggleButton" Property="IsChecked" Value="True">
                                <Setter TargetName="ToggleButton" Property="Background" Value="#2D2D30"/>
                                <Setter TargetName="ToggleButton" Property="BorderBrush" Value="#888888"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ToggleButton" Property="Opacity" Value="0.55"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Styl dla Button -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla CheckBox -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Styl dla TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
        </Style>

        <!-- Styl dla ComboBox (bazowy) -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
        </Style>

        <!-- Styl dla ramek sekcji -->
        <Style TargetType="Border" x:Key="SectionBorderStyle">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="BorderBrush" Value="#454545"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Window.Resources>

    <DockPanel>

        <!-- STATUS BAR (GÓRA) -->
        <Border DockPanel.Dock="Top" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
            <TextBlock Name="TxtStatusBar"
                       Text="Gotowy"
                       Margin="15,8"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="#4EC9B0"/>
        </Border>

        <!-- PANEL GŁÓWNY (NAZWA OKNA + STATUSY) -->
        <Border DockPanel.Dock="Top" Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,0,0,1" Padding="15,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Wiersz 1: Nazwa Okna -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="📌 NAZWA OKNA:" FontSize="12" FontWeight="Bold" Foreground="#AAAAAA" VerticalAlignment="Center" Margin="0,0,15,0"/>

                    <Border Grid.Column="1" Background="#333337" BorderBrush="#555555" BorderThickness="1" Padding="8" CornerRadius="3">
                        <TextBlock Name="TxtCurrentWindowTitle"
                                   Text="Brak"
                                   FontSize="13"
                                   FontWeight="Bold"
                                   Foreground="#569CD6"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- Wiersz 3: Kafelki Statusów -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.Resources>
                        <Style TargetType="Border" x:Key="TileStyle">
                            <Setter Property="Background" Value="{StaticResource TileBg}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource TileBorder}"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="CornerRadius" Value="3"/>
                            <Setter Property="Margin" Value="0,0,6,0"/>
                        </Style>
                        <Style TargetType="TextBlock" x:Key="TileHeader">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="Foreground" Value="#E0E0E0"/>
                            <Setter Property="Margin" Value="0,0,0,4"/>
                        </Style>
                        <Style TargetType="TextBlock" x:Key="TileValue">
                            <Setter Property="FontSize" Value="10"/>
                            <Setter Property="Foreground" Value="#999999"/>
                        </Style>
                    </Grid.Resources>

                    <Border Name="BorderManualStatus" Grid.Column="0" Style="{StaticResource TileStyle}">
                        <StackPanel>
                            <TextBlock Text="LPM + PPM" Style="{StaticResource TileHeader}"/>
                            <TextBlock Name="TxtManualCps" Text="CPS: Wyłączony" Style="{StaticResource TileValue}"/>
                        </StackPanel>
                    </Border>

                    <Border Name="BorderAutoLeftStatus" Grid.Column="1" Style="{StaticResource TileStyle}">
                        <StackPanel>
                            <TextBlock Text="AUTO LPM" Style="{StaticResource TileHeader}"/>
                            <TextBlock Name="TxtAutoLeftCps" Text="CPS: Wyłączony" Style="{StaticResource TileValue}"/>
                        </StackPanel>
                    </Border>

                    <Border Name="BorderAutoRightStatus" Grid.Column="2" Style="{StaticResource TileStyle}">
                        <StackPanel>
                            <TextBlock Text="AUTO PPM" Style="{StaticResource TileHeader}"/>
                            <TextBlock Name="TxtAutoRightCps" Text="CPS: Wyłączony" Style="{StaticResource TileValue}"/>
                        </StackPanel>
                    </Border>

                    <Border Name="BorderKopacz533Status" Grid.Column="3" Style="{StaticResource TileStyle}">
                        <StackPanel>
                            <TextBlock Text="KOPACZ 5/3/3" Style="{StaticResource TileHeader}"/>
                            <TextBlock Name="TxtKopacz533Status" Text="Wyłączony" Style="{StaticResource TileValue}"/>
                        </StackPanel>
                    </Border>

                    <Border Name="BorderKopacz633Status" Grid.Column="4" Style="{StaticResource TileStyle}" Margin="0">
                        <StackPanel>
                            <TextBlock Text="KOPACZ 6/3/3" Style="{StaticResource TileHeader}"/>
                            <TextBlock Name="TxtKopacz633Status" Text="Wyłączony" Style="{StaticResource TileValue}"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Name="BorderJablkaZLisciStatus" Grid.Column="5" Style="{StaticResource TileStyle}" Margin="0">
                        <StackPanel>
                            <TextBlock Text="Jabłka z liści" Style="{StaticResource TileHeader}"/>
                            <TextBlock Name="TxtJablkaZLisciStatus" Text="Wyłączony" Style="{StaticResource TileValue}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- STATUS FOCUS/ZAPIS (Środkowy pasek) -->
        <Border DockPanel.Dock="Top" Background="#1E1E1E" BorderBrush="#3F3F46" BorderThickness="0,0,0,1" Padding="15,8">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Ellipse Name="EllMinecraftFocus" Width="10" Height="10" Fill="#FF5555" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Minecraft Focus:" Width="120" Foreground="#CCCCCC"/>
                    <TextBlock Name="TxtMinecraftFocus" Text="✗ Nie" FontWeight="Bold" Foreground="#FF5555"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Ellipse Name="EllSettingsSaved" Width="10" Height="10" Fill="#4EC9B0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Settings Saved:" Width="120" Foreground="#CCCCCC"/>
                    <TextBlock Name="TxtSettingsSaved" Text="✓ Tak" FontWeight="Bold" Foreground="#4EC9B0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- ZAKŁADKI (TAB CONTROL) -->
        <TabControl Name="MainTabControl" DockPanel.Dock="Top" Background="Transparent" BorderThickness="0" Margin="10">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="1,1,1,0" Margin="0,0,4,0" Padding="20,10" CornerRadius="4,4,0,0">
                                    <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" RecognizesAccessKey="True"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#1E1E1E"/>
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,2,1,0"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Foreground" Value="#999999"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- ========== PVP ========== -->
            <TabItem Header="PVP">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEWA KOLUMNA -->
                        <StackPanel Grid.Column="0">
                            <Border Background="#252526" CornerRadius="4" Padding="10" Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="ChkMacroManualEnabled"
                                              VerticalAlignment="Center"
                                              Checked="ChkMacroManualEnabled_Changed"
                                              Unchecked="ChkMacroManualEnabled_Changed"/>
                                    <TextBlock Text="LPM + PPM HOLD" FontSize="14" FontWeight="Bold" Margin="10,0,0,0" Foreground="White"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource SectionBorderStyle}">
                                <StackPanel>
                                    <TextBlock Text="Lewy przycisk" FontSize="13" FontWeight="Bold" Margin="0,0,0,15" Foreground="#569CD6"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Min CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtManualLeftMinCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Max CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtManualLeftMaxCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource SectionBorderStyle}">
                                <StackPanel>
                                    <TextBlock Text="Prawy przycisk" FontSize="13" FontWeight="Bold" Margin="0,0,0,15" Foreground="#569CD6"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Min CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtManualRightMinCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Max CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtManualRightMaxCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource SectionBorderStyle}">
                                <StackPanel>
                                    <TextBlock Text="Przypisz klawisz" FontSize="13" FontWeight="Bold" Margin="0,0,0,15" Foreground="#569CD6"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Klawisz:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtMacroManualKey" Width="80" Margin="0,0,10,0" IsReadOnly="True" FontWeight="Bold" Foreground="#4EC9B0"/>
                                        <Button Name="BtnMacroManualCapture" Content="Zapisz" Width="80" Click="BtnMacroManualCapture_Click"/>
                                    </StackPanel>

                                    <TextBlock Text="1 klawisz aktywuje LPM i PPM równocześnie!" FontSize="11" Foreground="#888888" Margin="0,5,0,0" FontStyle="Italic"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <Border Grid.Column="1" Width="1" Background="#3F3F46" Margin="14,0"/>

                        <StackPanel Grid.Column="2">
                            <Border Style="{StaticResource SectionBorderStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <CheckBox Name="ChkAutoLeftEnabled"
                                                  VerticalAlignment="Center"
                                                  Checked="ChkAutoLeftEnabled_Changed"
                                                  Unchecked="ChkAutoLeftEnabled_Changed"/>
                                        <TextBlock Text="AUTOMATYCZNY LPM" FontSize="13" FontWeight="Bold" Margin="10,0,0,0" Foreground="White"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Klawisz:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoLeftKey" Width="80" Margin="0,0,10,0" IsReadOnly="True" FontWeight="Bold" Foreground="#4EC9B0"/>
                                        <Button Name="BtnAutoLeftCapture" Content="Zapisz" Width="80" Click="BtnAutoLeftCapture_Click"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Min CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoLeftMinCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Max CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoLeftMaxCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource SectionBorderStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <CheckBox Name="ChkAutoRightEnabled"
                                                  VerticalAlignment="Center"
                                                  Checked="ChkAutoRightEnabled_Changed"
                                                  Unchecked="ChkAutoRightEnabled_Changed"/>
                                        <TextBlock Text="AUTOMATYCZNY PPM" FontSize="13" FontWeight="Bold" Margin="10,0,0,0" Foreground="White"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Klawisz:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoRightKey" Width="80" Margin="0,0,10,0" IsReadOnly="True" FontWeight="Bold" Foreground="#4EC9B0"/>
                                        <Button Name="BtnAutoRightCapture" Content="Zapisz" Width="80" Click="BtnAutoRightCapture_Click"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Min CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoRightMinCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Max CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoRightMaxCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            
                            <Border Style="{StaticResource SectionBorderStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <CheckBox Name="ChkJablkaZLisciEnabled"
                                                   VerticalAlignment="Center"
                                                   Checked="ChkJablkaZLisciEnabled_Changed"
                                                   Unchecked="ChkJablkaZLisciEnabled_Changed"/>
                                        <TextBlock Text="Jabłka z liści"
                                                   FontSize="13"
                                                   FontWeight="Bold"
                                                   Margin="10,0,0,0"
                                                   Foreground="White"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Klawisz:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtJablkaZLisciKey"
                                                 Width="120"
                                                 Margin="0,0,10,0"
                                                 IsReadOnly="True"
                                                 FontWeight="Bold"
                                                 Foreground="#4EC9B0"/>
                                        <Button Name="BtnJablkaZLisciCapture"
                                                Content="Zapisz"
                                                Width="80"
                                                Click="BtnJablkaZLisciCapture_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- ========== KOPACZ ========== -->
            <TabItem Header="Kopacz">
                <Grid Margin="10,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Wybierz opcję kopania:" FontSize="14" FontWeight="Bold" Margin="0,0,0,15" Foreground="White"/>

                            <Border Style="{StaticResource SectionBorderStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <CheckBox Name="ChkKopacz533Enabled"
                                                  Content="Kopacz 5/3/3"
                                                  FontSize="13" FontWeight="Bold"
                                                  Checked="ChkKopacz533Enabled_Changed"
                                                  Unchecked="ChkKopacz533Enabled_Changed"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <TextBlock Text="Klawisz:" Width="120" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtKopacz533Key" Width="80" Margin="0,0,10,0" IsReadOnly="True" FontWeight="Bold" Foreground="#4EC9B0"/>
                                        <Button Name="BtnKopacz533Capture" Content="Zapisz klawisz" Width="120" Click="BtnKopacz533Capture_Click"/>
                                    </StackPanel>

                                    <TextBlock Text="Komendy:" FontSize="11" FontWeight="Bold" Margin="0,0,0,10" Foreground="#AAAAAA"/>
                                    <StackPanel Name="PanelKopacz533Commands" Orientation="Vertical" Margin="0,0,0,15"/>

                                    <Button Name="BtnKopacz533AddCommand" Content="+ Dodaj komendę" Width="140" Click="BtnKopacz533AddCommand_Click" Background="#2D2D30" BorderBrush="#555" BorderThickness="1"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource SectionBorderStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <CheckBox Name="ChkKopacz633Enabled"
                                                  Content="Kopacz 6/3/3"
                                                  FontSize="13" FontWeight="Bold"
                                                  Checked="ChkKopacz633Enabled_Changed"
                                                  Unchecked="ChkKopacz633Enabled_Changed"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <TextBlock Text="Klawisz:" Width="120" VerticalAlignment="Center"/>
