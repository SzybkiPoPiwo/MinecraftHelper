<Window x:Class="MinecraftHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinecraftHelper"
        mc:Ignorable="d"
        Title="Minecraft Helper" Height="900" Width="1400"
        Background="#0F141D" Foreground="#E8EEF8">

    <Window.Resources>
        <!-- ========================================== -->
        <!-- KLUCZOWE ZASOBY DLA KODU C# (NIE USUWAƒÜ) -->
        <!-- ========================================== -->
        <SolidColorBrush x:Key="TileBg" Color="#1E2A39"/>
        <SolidColorBrush x:Key="TileBgActive" Color="#17324A"/>
        <SolidColorBrush x:Key="TileBorder" Color="#3E536E"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#2EA8FF"/>

        <!-- ===== DARK COMBOBOX (dzia≈Ça + ciemny hover/selected) ===== -->
        <SolidColorBrush x:Key="ComboBg" Color="#161F2B"/>
        <SolidColorBrush x:Key="ComboBorder" Color="#4B6283"/>
        <SolidColorBrush x:Key="ComboDropBg" Color="#0F141D"/>
        <SolidColorBrush x:Key="ComboHoverBg" Color="#1E2A39"/>
        <SolidColorBrush x:Key="ComboSelectedBg" Color="#2C3A4F"/>
        <SolidColorBrush x:Key="ComboText" Color="#F8FBFF"/>

        <Style x:Key="DarkComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="{StaticResource ComboText}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource ComboHoverBg}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource ComboSelectedBg}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#7085A3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource ComboText}"/>
            <Setter Property="Background" Value="{StaticResource ComboBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ComboBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource DarkComboBoxItem}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- KLIKALNY toggle (≈ºeby dropdown siƒô otwiera≈Ç) -->
                            <ToggleButton x:Name="ToggleButton"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          Foreground="{StaticResource ComboText}"
                                          TextElement.Foreground="{StaticResource ComboText}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="ToggleBorder"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ToggleBorder" Property="Background" Value="#1E2A39"/>
                                                <Setter TargetName="ToggleBorder" Property="BorderBrush" Value="#7085A3"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="ToggleBorder" Property="Background" Value="#2C3A4F"/>
                                                <Setter TargetName="ToggleBorder" Property="BorderBrush" Value="#7F94B2"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="ToggleBorder" Property="Background" Value="#1E2A39"/>
                                                <Setter TargetName="ToggleBorder" Property="BorderBrush" Value="#7F94B2"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="ToggleBorder" Property="Opacity" Value="0.55"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="22"/>
                                    </Grid.ColumnDefinitions>

                                    <ContentPresenter Grid.Column="0"
                                                      Margin="8,0,6,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>

                                    <Path Grid.Column="1"
                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                          Fill="#CFDBEB"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Grid>
                            </ToggleButton>

                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Fade">
                                <Border Background="{StaticResource ComboDropBg}"
                                        BorderBrush="{StaticResource ComboBorder}"
                                        BorderThickness="1"
                                        CornerRadius="3"
                                        SnapsToDevicePixels="True">
                                    <ScrollViewer SnapsToDevicePixels="True"
                                                  VerticalScrollBarVisibility="Auto">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#243244"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4B6283"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#1A2432"/>
                    <Setter Property="Foreground" Value="#92A6C1"/>
                    <Setter Property="BorderBrush" Value="#34465E"/>
                    <Setter Property="Opacity" Value="0.75"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla Button -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#2B3C52"/>
                    <Setter Property="Foreground" Value="#92A6C1"/>
                    <Setter Property="Opacity" Value="0.6"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla CheckBox -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E8EEF8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Styl dla TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CFDBEB"/>
        </Style>

        <!-- Styl dla ComboBox (bazowy) -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#243244"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4B6283"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.7"/>
                    <Setter Property="Foreground" Value="#92A6C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla ramek sekcji -->
        <Style TargetType="Border" x:Key="SectionBorderStyle">
            <Setter Property="Background" Value="#161F2B"/>
            <Setter Property="BorderBrush" Value="#3E536E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Window.Resources>

    <DockPanel>

        <!-- STATUS BAR (G√ìRA) -->
        <Border DockPanel.Dock="Top" Background="#1E2A39" BorderBrush="#34465E" BorderThickness="0,0,0,1">
            <TextBlock Name="TxtStatusBar"
                       Text="Gotowy"
                       Margin="15,8"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="#38D6B4"/>
        </Border>

        <!-- PANEL G≈Å√ìWNY (NAZWA OKNA + STATUSY) -->
        <Border DockPanel.Dock="Top" Background="#161F2B" BorderBrush="#34465E" BorderThickness="0,0,0,1" Padding="15,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Wiersz 1: Nazwa Okna -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="üìå NAZWA OKNA:" FontSize="12" FontWeight="Bold" Foreground="#A8BAD3" VerticalAlignment="Center" Margin="0,0,15,0"/>

                    <Border Grid.Column="1" Background="#243244" BorderBrush="#4B6283" BorderThickness="1" Padding="8" CornerRadius="3">
                        <TextBlock Name="TxtCurrentWindowTitle"
                                   Text="Brak"
                                   FontSize="13"
                                   FontWeight="Bold"
                                   Foreground="#7FC8FF"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- Wiersz 3: Kafelki Status√≥w -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.Resources>
                        <Style TargetType="Border" x:Key="TileStyle">
                            <Setter Property="Background" Value="{StaticResource TileBg}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource TileBorder}"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="CornerRadius" Value="3"/>
                            <Setter Property="Margin" Value="0,0,6,0"/>
                        </Style>
                        <Style TargetType="TextBlock" x:Key="TileHeader">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="Foreground" Value="#E8EEF8"/>
                            <Setter Property="Margin" Value="0,0,0,4"/>
                        </Style>
                        <Style TargetType="TextBlock" x:Key="TileValue">
                            <Setter Property="FontSize" Value="10"/>
                            <Setter Property="Foreground" Value="#92A6C1"/>
                        </Style>
                    </Grid.Resources>

                    <Border Name="BorderManualStatus" Grid.Column="0" Style="{StaticResource TileStyle}">
                        <StackPanel>
                            <TextBlock Text="LPM + PPM" Style="{StaticResource TileHeader}"/>
                            <TextBlock Name="TxtManualCps"
                                       Text="CPS: Wy≈ÇƒÖczony"
                                       Style="{StaticResource TileValue}"
                                       TextWrapping="Wrap"
                                       LineStackingStrategy="BlockLineHeight"
                                       LineHeight="14"/>
                        </StackPanel>
                    </Border>

                    <Border Name="BorderAutoLeftStatus" Grid.Column="1" Style="{StaticResource TileStyle}">
                        <StackPanel>
                            <TextBlock Text="AUTO LPM" Style="{StaticResource TileHeader}"/>
                            <TextBlock Name="TxtAutoLeftCps"
                                       Text="CPS: Wy≈ÇƒÖczony"
                                       Style="{StaticResource TileValue}"
                                       TextWrapping="Wrap"
                                       LineStackingStrategy="BlockLineHeight"
                                       LineHeight="14"/>
                        </StackPanel>
                    </Border>

                    <Border Name="BorderAutoRightStatus" Grid.Column="2" Style="{StaticResource TileStyle}">
                        <StackPanel>
                            <TextBlock Text="AUTO PPM" Style="{StaticResource TileHeader}"/>
                            <TextBlock Name="TxtAutoRightCps"
                                       Text="CPS: Wy≈ÇƒÖczony"
                                       Style="{StaticResource TileValue}"
                                       TextWrapping="Wrap"
                                       LineStackingStrategy="BlockLineHeight"
                                       LineHeight="14"/>
                        </StackPanel>
                    </Border>

                    <Border Name="BorderKopacz533Status" Grid.Column="3" Style="{StaticResource TileStyle}">
                        <StackPanel>
                            <TextBlock Text="KOPACZ 5/3/3" Style="{StaticResource TileHeader}"/>
                            <TextBlock Name="TxtKopacz533Status"
                                       Text="Wy≈ÇƒÖczony"
                                       Style="{StaticResource TileValue}"
                                       TextWrapping="Wrap"
                                       LineStackingStrategy="BlockLineHeight"
                                       LineHeight="14"/>
                        </StackPanel>
                    </Border>

                    <Border Name="BorderKopacz633Status" Grid.Column="4" Style="{StaticResource TileStyle}" Margin="0">
                        <StackPanel>
                            <TextBlock Text="KOPACZ 6/3/3" Style="{StaticResource TileHeader}"/>
                            <TextBlock Name="TxtKopacz633Status"
                                       Text="Wy≈ÇƒÖczony"
                                       Style="{StaticResource TileValue}"
                                       TextWrapping="Wrap"
                                       LineStackingStrategy="BlockLineHeight"
                                       LineHeight="14"/>
                        </StackPanel>
                    </Border>

                    <Border Name="BorderJablkaZLisciStatus" Grid.Column="5" Style="{StaticResource TileStyle}">
                        <StackPanel>
                            <TextBlock Text="Jab≈Çka z li≈õci" Style="{StaticResource TileHeader}"/>
                            <TextBlock Name="TxtJablkaZLisciStatus"
                                       Text="Wy≈ÇƒÖczony"
                                       Style="{StaticResource TileValue}"
                                       TextWrapping="Wrap"
                                       LineStackingStrategy="BlockLineHeight"
                                       LineHeight="14"/>
                        </StackPanel>
                    </Border>

                    <Border Name="BorderCursorPauseStatus" Grid.Column="6" Style="{StaticResource TileStyle}" Margin="0">
                        <StackPanel>
                            <TextBlock Text="Pauza ekwipunku" Style="{StaticResource TileHeader}"/>
                            <TextBlock Name="TxtCursorPauseStatus" Text="Wy≈ÇƒÖczona" Style="{StaticResource TileValue}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- STATUS FOCUS/ZAPIS (≈örodkowy pasek) -->
        <Border DockPanel.Dock="Top" Background="#0F141D" BorderBrush="#34465E" BorderThickness="0,0,0,1" Padding="15,8">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Ellipse Name="EllMinecraftFocus" Width="10" Height="10" Fill="#FF6B6B" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Minecraft Focus:" Width="120" Foreground="#CFDBEB"/>
                    <TextBlock Name="TxtMinecraftFocus" Text="‚úó Nie" FontWeight="Bold" Foreground="#FF6B6B"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Ellipse Name="EllSettingsSaved" Width="10" Height="10" Fill="#38D6B4" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Settings Saved:" Width="120" Foreground="#CFDBEB"/>
                    <TextBlock Name="TxtSettingsSaved" Text="‚úì Tak" FontWeight="Bold" Foreground="#38D6B4"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- ZAK≈ÅADKI (TAB CONTROL) -->
        <TabControl Name="MainTabControl" DockPanel.Dock="Top" Background="Transparent" BorderThickness="0" Margin="10">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" Background="#1E2A39" BorderBrush="#34465E" BorderThickness="1,1,1,0" Margin="0,0,4,0" Padding="20,10" CornerRadius="4,4,0,0">
                                    <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" RecognizesAccessKey="True"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#0F141D"/>
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,2,1,0"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Foreground" Value="#92A6C1"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- ========== PVP ========== -->
            <TabItem Header="PVP">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEWA KOLUMNA -->
                        <StackPanel Grid.Column="0">
                            <Border Background="#161F2B" CornerRadius="4" Padding="10" Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="ChkMacroManualEnabled"
                                              VerticalAlignment="Center"
                                              Checked="ChkMacroManualEnabled_Changed"
                                              Unchecked="ChkMacroManualEnabled_Changed"/>
                                    <TextBlock Text="LPM + PPM HOLD" FontSize="14" FontWeight="Bold" Margin="10,0,0,0" Foreground="White"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Name="BorderManualLeftSection" Style="{StaticResource SectionBorderStyle}">
                                <StackPanel>
                                    <TextBlock Text="Lewy przycisk" FontSize="13" FontWeight="Bold" Margin="0,0,0,15" Foreground="#7FC8FF"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Min CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtManualLeftMinCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Max CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtManualLeftMaxCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Name="BorderManualRightSection" Style="{StaticResource SectionBorderStyle}">
                                <StackPanel>
                                    <TextBlock Text="Prawy przycisk" FontSize="13" FontWeight="Bold" Margin="0,0,0,15" Foreground="#7FC8FF"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Min CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtManualRightMinCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Max CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtManualRightMaxCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Name="BorderManualBindSection" Style="{StaticResource SectionBorderStyle}">
                                <StackPanel>
                                    <TextBlock Text="Przypisz klawisz" FontSize="13" FontWeight="Bold" Margin="0,0,0,15" Foreground="#7FC8FF"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Klawisz:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtMacroManualKey"
                                                 Width="80"
                                                 Margin="0,0,10,0"
                                                 IsReadOnly="True"
                                                 FontWeight="Bold"
                                                 Foreground="#38D6B4"
                                                 Tag="HoldToggle"
                                                 PreviewMouseLeftButtonDown="BindKeyBox_PreviewMouseLeftButtonDown"/>
                                        <Button Name="BtnMacroManualCapture" Content="Zapisz" Width="80" Click="BtnMacroManualCapture_Click"/>
                                    </StackPanel>

                                    <TextBlock Text="1 klawisz aktywuje LPM i PPM r√≥wnocze≈õnie!" FontSize="11" Foreground="#7F94B2" Margin="0,5,0,0" FontStyle="Italic"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <Border Grid.Column="1" Width="1" Background="#34465E" Margin="14,0"/>

                        <StackPanel Grid.Column="2">
                            <Border Name="BorderAutoLeftSection" Style="{StaticResource SectionBorderStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <CheckBox Name="ChkAutoLeftEnabled"
                                                  VerticalAlignment="Center"
                                                  Checked="ChkAutoLeftEnabled_Changed"
                                                  Unchecked="ChkAutoLeftEnabled_Changed"/>
                                        <TextBlock Text="AUTOMATYCZNY LPM" FontSize="13" FontWeight="Bold" Margin="10,0,0,0" Foreground="White"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Klawisz:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoLeftKey"
                                                 Width="80"
                                                 Margin="0,0,10,0"
                                                 IsReadOnly="True"
                                                 FontWeight="Bold"
                                                 Foreground="#38D6B4"
                                                 Tag="AutoLeft"
                                                 PreviewMouseLeftButtonDown="BindKeyBox_PreviewMouseLeftButtonDown"/>
                                        <Button Name="BtnAutoLeftCapture" Content="Zapisz" Width="80" Click="BtnAutoLeftCapture_Click"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Min CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoLeftMinCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Max CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoLeftMaxCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Name="BorderAutoRightSection" Style="{StaticResource SectionBorderStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <CheckBox Name="ChkAutoRightEnabled"
                                                  VerticalAlignment="Center"
                                                  Checked="ChkAutoRightEnabled_Changed"
                                                  Unchecked="ChkAutoRightEnabled_Changed"/>
                                        <TextBlock Text="AUTOMATYCZNY PPM" FontSize="13" FontWeight="Bold" Margin="10,0,0,0" Foreground="White"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Klawisz:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoRightKey"
                                                 Width="80"
                                                 Margin="0,0,10,0"
                                                 IsReadOnly="True"
                                                 FontWeight="Bold"
                                                 Foreground="#38D6B4"
                                                 Tag="AutoRight"
                                                 PreviewMouseLeftButtonDown="BindKeyBox_PreviewMouseLeftButtonDown"/>
                                        <Button Name="BtnAutoRightCapture" Content="Zapisz" Width="80" Click="BtnAutoRightCapture_Click"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Min CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoRightMinCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Max CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoRightMaxCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Name="BorderJablkaSection" Style="{StaticResource SectionBorderStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <CheckBox Name="ChkJablkaZLisciEnabled"
                                                   VerticalAlignment="Center"
                                                   Checked="ChkJablkaZLisciEnabled_Changed"
                                                   Unchecked="ChkJablkaZLisciEnabled_Changed"/>
                                        <TextBlock Text="Jab≈Çka z li≈õci"
                                                   FontSize="13"
                                                   FontWeight="Bold"
                                                   Margin="10,0,0,0"
                                                   Foreground="White"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
