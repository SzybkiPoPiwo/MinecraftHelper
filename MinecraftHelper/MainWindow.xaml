<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="MinecraftHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MinecraftHelper"
        Title="Minecraft Helper" Height="900" Width="1400">

    <DockPanel>

        <!-- STATUS U GÓRY -->
        <Border DockPanel.Dock="Top" Background="#FFF9F9F9" BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1">
            <TextBlock Name="TxtStatusBar"
                       Text="Gotowy"
                       Margin="10,4"
                       FontSize="12"
                       FontWeight="Bold"
                       Foreground="Green"/>
        </Border>

        <!-- PANEL NAZWA OKNA + STATUSY TRYBÓW -->
        <Border DockPanel.Dock="Top" BorderBrush="LightGray" BorderThickness="0,0,0,2" Padding="15,10,15,10" Background="#F9F9F9">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- NAZWA OKNA -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="📌 NAZWA OKNA:" FontSize="11" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center" Margin="0,0,15,0"/>

                    <Border Grid.Column="1" BorderBrush="#DDD" BorderThickness="1" Padding="8" Background="#FFFFFF" CornerRadius="3">
                        <TextBlock Name="TxtCurrentWindowTitle" 
                                   Text="Brak" 
                                   FontSize="12" 
                                   FontWeight="Bold" 
                                   Foreground="#008000"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- SEPARATOR -->
                <Border Grid.Row="1"/>

                <!-- STATUSY TRYBÓW -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LPM + PPM -->
                    <Border Name="BorderManualStatus" Grid.Column="0" BorderBrush="#DDD" BorderThickness="1" Padding="8" Margin="0,0,5,0" Background="#FFFFFF" CornerRadius="3">
                        <StackPanel>
                            <TextBlock Text="LPM + PPM" FontWeight="Bold" FontSize="10" Margin="0,0,4,0"/>
                            <TextBlock Name="TxtManualCps" Text="CPS: Wyłączony" FontSize="9" Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- AUTO LPM -->
                    <Border Name="BorderAutoLeftStatus" Grid.Column="1" BorderBrush="#DDD" BorderThickness="1" Padding="8" Margin="0,0,5,0" Background="#FFFFFF" CornerRadius="3">
                        <StackPanel>
                            <TextBlock Text="AUTO LPM" FontWeight="Bold" FontSize="10" Margin="0,0,4,0"/>
                            <TextBlock Name="TxtAutoLeftCps" Text="CPS: Wyłączony" FontSize="9" Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- AUTO PPM -->
                    <Border Name="BorderAutoRightStatus" Grid.Column="2" BorderBrush="#DDD" BorderThickness="1" Padding="8" Margin="0,0,5,0" Background="#FFFFFF" CornerRadius="3">
                        <StackPanel>
                            <TextBlock Text="AUTO PPM" FontWeight="Bold" FontSize="10" Margin="0,0,4,0"/>
                            <TextBlock Name="TxtAutoRightCps" Text="CPS: Wyłączony" FontSize="9" Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- KOPACZ 5/3/3 -->
                    <Border Name="BorderKopacz533Status" Grid.Column="3" BorderBrush="#DDD" BorderThickness="1" Padding="8" Margin="0,0,5,0" Background="#FFFFFF" CornerRadius="3">
                        <StackPanel>
                            <TextBlock Text="KOPACZ 5/3/3" FontWeight="Bold" FontSize="10" Margin="0,0,4,0"/>
                            <TextBlock Name="TxtKopacz533Status" Text="Wyłączony" FontSize="9" Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- KOPACZ 6/3/3 -->
                    <Border Name="BorderKopacz633Status" Grid.Column="4" BorderBrush="#DDD" BorderThickness="1" Padding="8" Background="#FFFFFF" CornerRadius="3">
                        <StackPanel>
                            <TextBlock Text="KOPACZ 6/3/3" FontWeight="Bold" FontSize="10" Margin="0,0,4,0"/>
                            <TextBlock Name="TxtKopacz633Status" Text="Wyłączony" FontSize="9" Foreground="#666" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- STATUS FOCUS/ZAPIS – WSPÓLNY DLA WSZYSTKICH ZAKŁADEK -->
        <Border DockPanel.Dock="Top" BorderBrush="LightBlue" BorderThickness="2" Padding="15" Background="#F0F8FF" Margin="10,5,10,5">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Ellipse Name="EllMinecraftFocus" Width="10" Height="10" Fill="Red" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Minecraft Focus:" Width="120"/>
                    <TextBlock Name="TxtMinecraftFocus" Text="✗ Nie" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Ellipse Name="EllSettingsSaved" Width="10" Height="10" Fill="Green" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Settings Saved:" Width="120"/>
                    <TextBlock Name="TxtSettingsSaved" Text="✓ Tak" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- GŁÓWNE TABY -->
        <TabControl Name="MainTabControl" DockPanel.Dock="Top">

            <!-- ========== PVP ========== -->
            <TabItem Header="PVP">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEWA STRONA - LPM+PPM -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <CheckBox Name="ChkMacroManualEnabled"
                                          VerticalAlignment="Center"
                                          Checked="ChkMacroManualEnabled_Changed"
                                          Unchecked="ChkMacroManualEnabled_Changed"/>
                                <TextBlock Text="LPM + PPM HOLD" FontSize="14" FontWeight="Bold" Margin="10,0,0,0"/>
                            </StackPanel>

                            <!-- Lewy przycisk -->
                            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Lewy przycisk" FontSize="12" FontWeight="Bold" Margin="0,0,0,15"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Min CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtManualLeftMinCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Max CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtManualLeftMaxCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Prawy przycisk -->
                            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Prawy przycisk" FontSize="12" FontWeight="Bold" Margin="0,0,0,15"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Min CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtManualRightMinCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Max CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtManualRightMaxCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Przypisz klawisz -->
                            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="Przypisz klawisz" FontSize="12" FontWeight="Bold" Margin="0,0,0,15"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Klawisz:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtMacroManualKey" Width="80" Margin="10,0" IsReadOnly="True"/>
                                        <Button Name="BtnMacroManualCapture" Content="Zapisz" Width="80" Margin="10,0" Click="BtnMacroManualCapture_Click"/>
                                    </StackPanel>

                                    <TextBlock Text="1 klawisz aktywuje LPM i PPM równocześnie!" FontSize="10" Foreground="Gray" Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- SEPARATOR -->
                        <Border Grid.Column="1" Background="#CCCCCC" Margin="10,0"/>

                        <!-- PRAWA STRONA - AUTO -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Top">

                            <!-- AUTO LPM -->
                            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <CheckBox Name="ChkAutoLeftEnabled"
                                                  VerticalAlignment="Center"
                                                  Checked="ChkAutoLeftEnabled_Changed"
                                                  Unchecked="ChkAutoLeftEnabled_Changed"/>
                                        <TextBlock Text="AUTOMATYCZNY LPM" FontSize="12" FontWeight="Bold" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Klawisz:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoLeftKey" Width="80" Margin="10,0" IsReadOnly="True"/>
                                        <Button Name="BtnAutoLeftCapture" Content="Zapisz" Width="80" Margin="10,0" Click="BtnAutoLeftCapture_Click"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Min CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoLeftMinCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Max CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoLeftMaxCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- AUTO PPM -->
                            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <CheckBox Name="ChkAutoRightEnabled"
                                                  VerticalAlignment="Center"
                                                  Checked="ChkAutoRightEnabled_Changed"
                                                  Unchecked="ChkAutoRightEnabled_Changed"/>
                                        <TextBlock Text="AUTOMATYCZNY PPM" FontSize="12" FontWeight="Bold" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Klawisz:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoRightKey" Width="80" Margin="10,0" IsReadOnly="True"/>
                                        <Button Name="BtnAutoRightCapture" Content="Zapisz" Width="80" Margin="10,0" Click="BtnAutoRightCapture_Click"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Min CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoRightMinCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Max CPS:" Width="100" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtAutoRightMaxCps" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- ========== KOPACZ ========== -->
            <TabItem Header="Kopacz">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEWA STRONA -->
                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Wybierz opcję kopania:" FontSize="14" FontWeight="Bold" Margin="0,0,0,15"/>

                            <!-- Kopacz 5/3/3 -->
                            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <CheckBox Name="ChkKopacz533Enabled"
                                                  Content="Kopacz 5/3/3"
                                                  FontSize="12" FontWeight="Bold"
                                                  Checked="ChkKopacz533Enabled_Changed"
                                                  Unchecked="ChkKopacz533Enabled_Changed"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Klawisz:" Width="120" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtKopacz533Key" Width="80" Margin="10,0" IsReadOnly="True"/>
                                        <Button Name="BtnKopacz533Capture" Content="Zapisz klawisz" Width="120" Margin="10,0" Click="BtnKopacz533Capture_Click"/>
                                    </StackPanel>

                                    <TextBlock Text="Komendy:" FontSize="11" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <StackPanel Name="PanelKopacz533Commands" Orientation="Vertical" Margin="0,0,0,15"/>

                                    <Button Name="BtnKopacz533AddCommand" Content="+ Dodaj komendę" Width="140" Click="BtnKopacz533AddCommand_Click"/>
                                </StackPanel>
                            </Border>

                            <!-- Kopacz 6/3/3 -->
                            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <CheckBox Name="ChkKopacz633Enabled"
                                                  Content="Kopacz 6/3/3"
                                                  FontSize="12" FontWeight="Bold"
                                                  Checked="ChkKopacz633Enabled_Changed"
                                                  Unchecked="ChkKopacz633Enabled_Changed"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Klawisz:" Width="120" VerticalAlignment="Center"/>
                                        <TextBox Name="TxtKopacz633Key" Width="80" Margin="10,0" IsReadOnly="True"/>
                                        <Button Name="BtnKopacz633Capture" Content="Zapisz klawisz" Width="120" Margin="10,0" Click="BtnKopacz633Capture_Click"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <TextBlock Text="Kierunek:" Width="120" VerticalAlignment="Center"/>
                                        <ComboBox Name="CbKopacz633Direction" Width="150" SelectionChanged="CbKopacz633Direction_SelectionChanged">
                                            <ComboBoxItem IsSelected="True"></ComboBoxItem>
                                            <ComboBoxItem>Na wprost</ComboBoxItem>
                                            <ComboBoxItem>Do góry</ComboBoxItem>
                                        </ComboBox>
                                    </StackPanel>

                                    <StackPanel Name="PanelKopaczNaWprost" Margin="0,0,0,15" Visibility="Collapsed">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                            <TextBlock Text="Szerokość:" Width="140" VerticalAlignment="Center"/>
                                            <TextBox Name="TxtKopacz633Width" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Name="PanelKopaczDoGory" Margin="0,0,0,15" Visibility="Collapsed">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="Szerokość:" Width="140" VerticalAlignment="Center"/>
                                            <TextBox Name="TxtKopacz633WidthUp" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                            <TextBlock Text="Długość:" Width="140" VerticalAlignment="Center"/>
                                            <TextBox Name="TxtKopacz633LengthUp" Width="80" TextChanged="AnyTextBox_TextChanged"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <TextBlock Text="Komendy:" FontSize="11" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <StackPanel Name="PanelKopacz633Commands" Orientation="Vertical" Margin="0,0,0,15"/>

                                    <Button Name="BtnKopacz633AddCommand" Content="+ Dodaj komendę" Width="140" Click="BtnKopacz633AddCommand_Click"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- PRAWA STRONA - PRZELICZNIK CZASU -->
                    <Border Grid.Column="1" BorderBrush="LightBlue" BorderThickness="2" Padding="15" Margin="10,20,20,20" Background="#F0F8FF" CornerRadius="5">
                        <StackPanel VerticalAlignment="Top">
                            <TextBlock Text="⏱️ PRZELICZNIK" FontSize="12" FontWeight="Bold" Margin="0,0,0,15" Foreground="#1E40AF"/>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="1 minuta" FontSize="10" FontWeight="Bold" Foreground="#333"/>
                                <TextBlock Text="= 60 sekund" FontSize="10" Foreground="#666"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="10 minut" FontSize="10" FontWeight="Bold" Foreground="#333"/>
                                <TextBlock Text="= 600 sekund" FontSize="10" Foreground="#666"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="20 minut" FontSize="10" FontWeight="Bold" Foreground="#333"/>
                                <TextBlock Text="= 1200 sekund" FontSize="10" Foreground="#666"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="30 minut" FontSize="10" FontWeight="Bold" Foreground="#333"/>
                                <TextBlock Text="= 1800 sekund" FontSize="10" Foreground="#666"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="40 minut" FontSize="10" FontWeight="Bold" Foreground="#333"/>
                                <TextBlock Text="= 2400 sekund" FontSize="10" Foreground="#666"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- ========== USTAWIENIA ========== -->
            <TabItem Header="Ustawienia">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEWA STRONA -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Top">
                            <TextBlock Text="Ogólne ustawienia" FontSize="14" FontWeight="Bold" Margin="0,0,0,15"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="Tytuł okna gry:" Width="140" VerticalAlignment="Center"/>
                                <TextBox Name="TxtTargetWindowTitle" Width="300" TextChanged="AnyTextBox_TextChanged"/>
                            </StackPanel>

                            <TextBlock Text="Historia tytułów (max 5):" FontSize="12" FontWeight="Bold" Margin="0,0,0,10"/>
                            <StackPanel Name="PanelWindowTitleHistory" Orientation="Vertical" Margin="0,0,0,20"/>

                            <TextBlock Text="Wskazówka: Każdy zapisany tytuł pojawia się na liście. Możesz kliknąć aby przypisać." 
                                       FontSize="10" Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,30"/>

                            <!-- IMPORT/EXPORT -->
                            <TextBlock Text="Import/Export ustawień" FontSize="12" FontWeight="Bold" Margin="0,0,0,15"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Button Name="BtnExportSettings" Content="💾 Exportuj" Width="120" Height="35" Click="BtnExportSettings_Click" Margin="0,0,10,0"/>
                                <Button Name="BtnImportSettings" Content="📂 Importuj" Width="120" Height="35" Click="BtnImportSettings_Click"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- PRAWA STRONA - AUTOR -->
                        <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" Padding="15" Background="#F9F9F9" CornerRadius="5" Margin="20,0,0,0">
                            <StackPanel>
                                <TextBlock Text="👨‍💻 Autor" FontSize="12" FontWeight="Bold" Margin="0,0,0,10"/>

                                <TextBlock Text="SzybkiPoPiwo" FontSize="11" FontWeight="Bold" Foreground="#333" Margin="0,0,0,8"/>

                                <TextBlock Text="🔗 Github:" FontSize="10" FontWeight="Bold"/>
                                <TextBlock FontSize="10" Margin="0,0,0,8">
                                    <Hyperlink NavigateUri="https://github.com/SzybkiPoPiwo" RequestNavigate="Github_RequestNavigate">
                                        https://github.com/SzybkiPoPiwo
                                    </Hyperlink>
                                </TextBlock>

                                <TextBlock Text="💬 Discord:" FontSize="10" FontWeight="Bold"/>
                                <TextBlock Text="twojstaryricardo" FontSize="10" Foreground="#7289DA"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>

    </DockPanel>
</Window>
