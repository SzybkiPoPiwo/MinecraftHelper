<Window x:Class="MinecraftHelper.StartupSplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MinecraftHelper"
        Width="500"
        Height="270"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closed="Window_Closed">
    <Border CornerRadius="10"
            Background="#0F1F34"
            BorderBrush="#4B6283"
            BorderThickness="1"
            Padding="18">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Center">
                <Border Width="84"
                        Height="84"
                        CornerRadius="8"
                        BorderBrush="#4B6283"
                        BorderThickness="1"
                        Background="#16283F"
                        HorizontalAlignment="Center">
                    <Image Name="ImgAppIcon"
                           Width="72"
                           Height="72"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="MinecraftHelper"
                           Margin="0,14,0,4"
                           HorizontalAlignment="Center"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#7FC8FF"/>
                <TextBlock Name="TxtLoading"
                           Text="Uruchamianie"
                           HorizontalAlignment="Center"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#92A6C1"/>
            </StackPanel>

            <ProgressBar Name="PrgLoading"
                         Grid.Row="1"
                         Height="8"
                         Margin="0,8,0,0"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         IsIndeterminate="False"
                         Background="#1B2C45"
                         Foreground="#2EA8FF"
                         BorderBrush="#4B6283"
                         BorderThickness="1"/>
        </Grid>
    </Border>
</Window>
